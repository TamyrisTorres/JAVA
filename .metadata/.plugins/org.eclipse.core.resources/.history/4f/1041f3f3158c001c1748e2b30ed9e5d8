package EstruturasDeControle;

import java.util.Scanner;

import javax.swing.JOptionPane;

public class ExercicioQuestao6 {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		int numero = 25;
		int tentativa = 3;
		int numeroAdvinha = 0;
		String game = JOptionPane.showInputDialog(
				"Vamos brincar de Advinhar?\nVocê precisa descobrir em qual número estou pensando. \nEstá pronto? Sim/Não");
		String iniciar;

		System.out.println(game);
		iniciar = entrada.next().toUpperCase();

		if (iniciar.equalsIgnoreCase("sim")) {

			do {
				System.out.println("Digite um número de 0 a 100: ");
				numeroAdvinha = entrada.nextInt();

				if (numeroAdvinha == numero) {
					System.out.println("Parabéns! Você acertou! ;P");
				} else if (numeroAdvinha != numero) {
					System.out.println("Você Errou!");
					tentativa--;
					System.out.printf("Você tem mais %d tentativas!\n", tentativa);
				}

			} while (numeroAdvinha != numero && tentativa != 0);
		}

		else if (iniciar.equalsIgnoreCase("não")) {
			System.out.println("OK! Good Bye! :(");
		}

		entrada.close();

	}

}
