package cesar;

import java.util.HashMap;
import java.util.Scanner;

public class ExemploHashMap {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		HashMap<String, Integer> cadastro = new HashMap<String, Integer>();

		cadastro.put("um", 1);
		cadastro.put("dois", 2);
		cadastro.put("três", 3);
		cadastro.put("quatro", 4);
		cadastro.put("cinco", 5);

		String finalizar = "";
		String numeroExtenso = "";
		do {

			System.out.println("Digite um número de um a cinco.");
			numeroExtenso = entrada.nextLine().equalsIgnoreCase(numeroExtenso);
			

			if (cadastro.containsKey(numeroExtenso)) {
				Integer usuario = cadastro.get(numeroExtenso);
				System.out.println("O seu número é: " + usuario.intValue()
						+ ". \nMultiplicado por ele mesmo, o resultado é: " + usuario.intValue() * usuario.intValue());

				System.out.println("\nDeseja encerrar o programa? sim/não");

				finalizar = entrada.nextLine();

			} else {
				System.out.println("Número Inválido. \nDeseja encerrar o programa? sim/não");
				finalizar = entrada.nextLine();

			}

			
		} while (!finalizar.equalsIgnoreCase("sim"));

		System.out.println("Obrigado por utilizar nosso código! Até mais. :)");

		entrada.close();
	}
}
