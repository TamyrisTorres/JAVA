package EstruturasDeControle;

import java.util.Scanner;

public class DesafioWhile {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		Double nota = 0.0;
		int quantidadeDeNotasValidas = 0;
		double total = 0;

		/*
		 * System.out.println("Digite o nome do Aluno: "); String nome =
		 * entrada.nextLine();
		 */

		do {
			
			for (int i = 1; i <= 4; i++) {
				System.out.printf("Digite a %2dª Nota: ", i);
				nota = entrada.nextDouble();
			
					if(nota >=0 && nota <= 10) {
						total =+ nota;
						quantidadeDeNotasValidas++;
						
					}else {
						System.out.println("Por favor digite uma nota válida!");
					}
			
			}

		} while (!nota.equals(-1.0));
		
		System.out.println("A quantidades de notas válidas: " + quantidadeDeNotasValidas);

		entrada.close();
	}
}
