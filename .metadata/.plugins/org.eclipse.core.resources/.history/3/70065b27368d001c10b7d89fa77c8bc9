package classe;

public class Data {
	
	int dia;
	int mes;
	int ano;
	
	
	String obterDataFormatada() {
		return String.format("%d/%d/%d", dia, mes, ano);
		
	}
	
	void imprimirDataFormatada() {// Esse metodo não funciona em desktop, em mobile e outros. melhor opção é o metodo acima.
		System.out.println(obterDataFormatada());
	}

}
