package cesar;

import java.util.HashMap;
import java.util.Scanner;

import EstruturasDeControle.WhileDeterminado;

public class ExemploHashMap {

	public static void main(String[] args) {

		Scanner entrada = new Scanner(System.in);

		HashMap<String, Integer> cadastro = new HashMap<String, Integer>();

		cadastro.put("um", 1);
		cadastro.put("dois", 2);
		cadastro.put("três", 3);
		cadastro.put("quatro", 4);
		cadastro.put("cinco", 5);

		String numeroExtenso;
		do {
			
		System.out.println("Digite um número de um a cinco.\n Para Finalizar digite: S");
		numeroExtenso = entrada.next();

		Integer usuario = 0;
		if (cadastro.containsKey(numeroExtenso)) {
			usuario = cadastro.get(numeroExtenso);
			System.out.println(usuario.intValue());
			
			System.out.println("O Número multiplicado por ele mesmo é: " + usuario.intValue() * usuario.intValue() + ".");
		}else {
			System.out.println("Número Invalido. Tente mais uma vez!");
		}
		}while(numeroExtenso != "S");

		System.out.println("Obrigado por utilizar nosso código! Até mais. :)");

		entrada.close();
	}
}
